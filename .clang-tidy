Checks:
  bugprone-*,
  clang-analyzer-*,
  concurrency-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,              
  readability-*,
  cppcoreguidelines-*,
  -modernize-use-trailing-return-type,
  -bugprone-easily-swappable-parameters
  -readability-identifier-length,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-special-member-functions,
CheckOptions:
  # 配置认知复杂度（函数的复杂度阈值）
  - key: readability-function-cognitive-complexity.Threshold
    value: 20
  # 忽略宏定义中的复杂性检查
  - key: readability-function-cognitive-complexity.IgnoreMacros
    value: true
  # 配置 bugprone-argument-comment 的参数阈值
  - key: bugprone-argument-comment.MinimumNumberOfArguments
    value: 3
  - key: readability-identifier-naming.VariableCase
    value: camelCase
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelCase
  - key: readability-function-size.LineThreshold
    value: 50
  - key: readability-function-size.BranchThreshold
    value: 10
  - key: performance-unnecessary-copy-initialization.IgnoreImplicitCopy
    value: false
  - key: performance-for-range-copy.AllowedTypes
    value: "std::string;std::vector<int>"
  - key: modernize-use-auto.MinTypeNameLength
    value: 5
  - key: modernize-loop-convert.MinConfidence
    value: reasonable
  - key: cppcoreguidelines-owning-memory.LegacyResourceProducers
    value: "malloc;calloc"
  - key: cppcoreguidelines-pro-bounds-pointer-arithmetic.IgnoreMacros
    value: true
  - key: bugprone-string-constructor.WarnOnLargeLength
    value: 1000
